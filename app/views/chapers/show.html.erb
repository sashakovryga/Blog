<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @chaper.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= markdown(@chaper.description) %>
</p>
 
<h2>Parts</h2>
<% @chaper.parts.each do |part| %>
  <p>
    <strong>Name:</strong>
    <%= part.name %>
  </p>
 
  <p>
    <strong>Text:</strong>
    <%= markdown(part.body) %>
  </p>
<% end %>
 
<h2>Add a part:</h2>
<%= form_for([@chaper, @chaper.parts.build]) do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 

<%= link_to 'Edit', edit_chaper_path(@chaper) %> |
<%= link_to 'Back', chapers_path %>
