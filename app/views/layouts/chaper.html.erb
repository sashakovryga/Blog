  <head>
  	
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
    <title><%= content_for?(:title) ? yield(:title) : "foundation-rails" %></title>
 
    <%= stylesheet_link_tag    "application" %>
 
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "vendor/custom.modernizr"%>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  </head>

  <body>

<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Awesome Store", store_path %></a></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
      <li class="divider"></li>
      <li><%= link_to "Browse Products", chapers_path %></li>
      <li class="divider"></li>
        <% if user_signed_in? %>
      <li><%= link_to "My chapers", chapers_path %></li>
      <% end %>
      <li><%= link_to "Price List" %></li>
      <li class="divider"></li>
      <li><%= link_to "Contact Us" %></li>
      <li class="divider"></li>
      <li><%= link_to "Cart" %></li>
      <% if user_signed_in? %>
       <li class="divider"></li>
  <li><%= link_to("My Profile", edit_user_registration_path)%></li>
  <li class="divider"></li>
  <li><%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>  </li>
  <% else %>
  <li class="divider"></li>
  <li><%= link_to('Login', new_user_session_path) %>  </li>
<%end%>
    </ul>
  </section>
</nav>
   <div class="row" >
    <div class="large-2 columns">
    <h2 class="subheader">Parts</h2>
    <ul class="side-nav">
    <li><%= link_to "Go to gallery", gallery_path(id: @chaper.gallery_id)  %> </li> 
    <% @chaper.parts.each do |part| %>  
 
    <li><%= link_to "#{part.name}", chaper_part_path(id: "#{part.id}", chaper_id:@chaper.id)  %> </li> 
    <% end %>
    </ul>
  </div>
   <div class="large-10 columns">
      
    <%= yield %>
  </div>
  
 
</div>    <%= javascript_include_tag "application" %>

  </body>
</html>
